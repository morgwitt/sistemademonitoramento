<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
			
			<%- include('partials/head') %>

		</head>
	<body>
		<%- include('partials/navegacao') %>

		<div class="jumbotron">
			<div class="container">
			<h1>Historico de Temperatura e Umidade</h1><br>
			<div class="row justify-content-center align-self-center">

			<table class="table">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Hora</th>
						<th scope="col">Temperatura</th>
						<th scope="col">Umidade</th>
						<th scope="col">Umidade Solo</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<% for (h of hist) { %>
								<%= h.date_temp %> <br>
							<% } %>
						</td>
						
						<td>
						<% for (h of hist) { %>
							<% if (h.temperatura.indexOf('Â°C')>-1) { %>
									Temperatura 
									<%= h.temperatura %><br>
							<% } %>
						<% } %>
						</td>
						<td>
							<% for (h of hist) { %>
								<% if (h.temperatura.indexOf('%')>-1) { %>
									Umidade 
									<%= h.temperatura %><br>
								<% } %>
							<% } %>
						</td>

						<td>
							<% for (h of hist) { %>
								<% if (h.temperatura.indexOf('olo')>-1) { %>
									<%= h.temperatura %><br>
								<% } %>
							<% } %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
</body>
</html>
